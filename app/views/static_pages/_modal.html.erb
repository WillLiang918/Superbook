<div id="modal">
  <form id="delete-comment" class="hidden">
    <h3>Delete Comment</h3>
    <p>Are you sure you want to delete this comment?</p>

    <footer>
      <button class="gray cancel">Cancel</button>
      <button class="blue delete">Delete</button>
    </footer>
  </form>

  <form id="delete-post" class="hidden">
    <h3>Delete Post</h3>
    <p>Are you sure you want to delete this?</p>

    <footer>
      <button class="gray cancel">Cancel</button>
      <button class="blue delete">Delete</button>
    </footer>
  </form>

  <form id="upload-profile-picture" class="hidden">

      <h3 class="flex-container">
        <div>Update Profile Picture</div>
        <a class="cancel cancel-x-icon"></a>
      </h3>

    <label class="upload-photo-button">
      <div>Upload Photo</div>
      <input type="file" class="hidden" />
    </label>

    <div class="preview-field">
      <img class="preview-image hidden" max="100" />
    </div>

    <div class="action-field">
      <button class="gray cancel">Cancel</button>
      <button class="blue delete" type="submit" disabled>Save</button>
    </div>
  </form>
</div>
